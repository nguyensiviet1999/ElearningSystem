<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar.blank? %>
          <%= gravatar_for @user %>
        <%else%>
          <%= image_tag @user.avatar.url%>
        <% end %>
        <%= @user.name %> </h1>
    </section>
  </aside>
</div>
