<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.avatar.blank? %>
        <%= gravatar_for @user, size: 50 %>
      <%else%>
        <%= image_tag @user.avatar.url%>
      <% end %>
      <%= link_to @user.name, @user %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %> <% end %>
  </div>
</div>
