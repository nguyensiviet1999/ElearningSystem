<div class="row">
  <div class = "col-md-8 offset-md-2">
    <h1>Add new word</h2>
    <%= form_for @word do |f| %>
      <div class="row">
        <div class="col-md-6">
          <%= f.label :word, "word" %>
          <%= f.text_field :word,class:"form-control", placeholder: "abc"%>
        </div>
        <div class="col-md-6">
          <%= f.label :pronounce, "pronounce" %>
          <%= f.text_field :pronounce,class:"form-control", placeholder: "abc"%>
        </div>
        <div class="col-md-6">
          <%= f.label :word_type, "word type" %>
          <%= f.text_field :word_type,class:"form-control", placeholder: "abc"%>
        </div>
        <div class="col-md-6">
          <%= f.label :meaning, "meaning" %>
          <%= f.text_field :meaning,class:"form-control", placeholder: "abc"%>
        </div>
        <br>
        <div class="col-md-6">
          <%= f.label :image, "image" %>
          <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
      </div>
      <%= f.submit "Add word",class:"form-control btn btn-success"%>
    <% end %>
  </div>
</div>
<a class="btn d-block" type="button" data-toggle="collapse" data-target="#collapseDataWord" aria-expanded="false" aria-controls="collapseDataWord">
  Add new words by file<i class="fa fa-caret-down" aria-hidden="true"></i>
</a>
<div class="collapse offset-md-2 " id="collapseDataWord" aria-labelledby="dropdownMenuButton">
  <h2>File format</h2>
  <p>
    @word /pronounce/
    <br>
    *word_type
    <br>
    -meaning
    <br>
    <br>
    @word /pronounce/
    <br>
    *word_type
    <br>
    -meaning
    <br>
    <br>
  </p>
  <%= form_tag({controller: "words",action: 'get_data_from_file'},multipart: true) do %>
    <%= label_tag('file_word', "Chon file txt") %>
    <%= file_field_tag( 'file_word') %>
    <%= submit_tag "Post file",class:" btn btn-success"%>
  <% end %>
</div>
