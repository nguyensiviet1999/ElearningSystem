<%= form_for @chatroom do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :topic, "topic" %>
  <%= f.text_field :topic %>
  <%= f.label :course_id, "khoa hoc" %>
  <%= f.select(:course_id, @options_course) %>
  <%= f.label :gold_bet, "tien cuoc" %>
  <%= f.number_field :gold_bet, step: 1 %>
  <%= f.label :number_members, "so nguoi" %>
  <%= f.number_field :number_members, step: 1  %>
  <%= f.label :number_of_words, "so tu" %>
  <%= f.number_field :number_of_words, step: 1 %>
  <%= f.submit "Submit"%>
<% end %>
