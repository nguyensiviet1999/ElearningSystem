<span>
</span>
<% @words.each do |word| %>
  <% if !@course.words.include?(word) %>
    <article id="add_word_to_course_<%=word.id%>">
      <div class="words position-relative">
        <div class="row">
          <div class="col-md-4 english">
            <div class="row">
              <div class="col-md-4">
                <%= form_for(@course.course_words.build,html:{ method: :delete,remote: true}) do |f| %>
                  <div><%= hidden_field_tag :word_id, word.id %></div>
                  <div><%= hidden_field_tag :course_id, @course.id %></div>
                  <%= f.submit "Xoa", class: "btn btn-danger" %>
                <% end %>
              </div>
              <div class="col-md-8">
                <h1>
                  <% if !word.course_words.first.nil? %>
                    <a href="<%=learn_course_path(id: word.course_words.first.course_id,word_id: word.id) %>">
                      <%= word.word%></a>
                  <% else %>
                    <b> <%= word.word%></b>
                  <% end %>
                </h1>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div>
              <h2><%= word.pronounce%></h2>
            </div>
            <div><b><%= word.meaning%></b></div>
          </div>
          <div class="col-md-4">
            <div>
              <%= image_tag word.image.url %>
              <button class = "speech btn" data-text="<%=word.word%>"><i class="fa fa-volume-down icon-play-audio"></i></button>
            </div>
          </div>
        </div>
      </div>
    </article>
  <% end %>
<% end %>
<%= javascript_pack_tag 'textToSpeech'%>
