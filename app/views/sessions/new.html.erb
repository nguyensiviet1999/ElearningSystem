<%provide(:title, "Sign Up Page")%>
<div class= "background_signup">
  <div class="row">
    <div class="col-md-6 offset-md-3 signup_form">
      <h1 style="color: white">Login</h1>
      <%=form_for(:session,url: login_path) do |f|%>
        <%=f.label :email%>
        <%=f.email_field :email , class:"form-control"%>
        <%=f.label :password%>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%=f.password_field :password , class:"form-control"%>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer
          </span>
        <% end %>
        <%=f.submit "Log in", class:"btn btn-primary form-control" %>
        <br>
        <br>
      <%end%>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      <a href="/auth/google_oauth2" id= "sign_in_gg" class="btn btn-danger"> Sign in with <i class='fab fa-google' aria-hidden='true' ></i></a>
      <a href="/auth/facebook" id= "sign_in_fb" class="btn btn-primary">Sign in with <i class='fab fa-facebook-f' aria-hidden='true'></i></a>
    </div>
  </div>
</div>
