<!--Carousel Wrapper-->
<div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel">
  <!--Indicators-->
  <ol class="carousel-indicators">
    <% @learning_words.length.times do|i|%>
      <li data-target="#carousel-example-2" data-slide-to=" <%= i %>" 
      
        <% if (@learning_words[i] == @current_word) %> class="active" <% end %> >
      </li>
    <%end%>
  </ol>
  <!--/.Indicators-->
  <!--Slides-->
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="carousel-inner" role="listbox">
        <% @learning_words.each do |word| %>
          <div class="carousel-item 
                <% if @current_word == word %> active<% end %>" >
            <!--Mask color-->
            <h1><%=word.word%></h1>
            <h2><%=word.pronounce%></h2>
            <h2><%=word.meaning%></h2>
            <%= image_tag word.image.url%>
          </div>
        <% end %>
      </div>
      <!--/.Slides-->
      <!--Controls-->
      <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
        <%= image_tag("ic_prev.png") %>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
        <%= image_tag("ic_next.png")%>
        <span class="sr-only">Next</span>
      </a>
      <!--/.Controls-->
    </div>
  </div>
</div>
<!--/.Carousel Wrapper-->
