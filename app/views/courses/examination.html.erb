<!--Carousel Wrapper-->
<div id="carousel-example-2" class="carousel slide" data-ride="carousel">
  <!--Indicators-->
  <!--/.Indicators-->
  <!--Slides-->
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div>So cau dung:<span class="true_answer">0</span>|So cau sai: <span class="false_answer">0</span></div>
      <div class="carousel-inner" role="listbox">
        <% @exam_words.each do |exam_word| %>
          <div class="carousel-item 
            <% if @current_word == exam_word[:word] %> active<% end %>" >
            <!--Mask color-->
            <h1><%=exam_word[:word].word%></h1>
            <h2><%=exam_word[:word].pronounce%></h2>
            <%= image_tag exam_word[:word].image.url%>
            <div class="row">
              <div class="col-md-4 offset-md-2 btn btn-primary">
                <%= link_to  "A. #{exam_word[:answer][0]}", 
                check_answer_course_path(answer: exam_word[:answer][0],word_id: exam_word[:word].id,answer_at:"#{exam_word[:word].word}_A") ,
                remote: true, class: "btn answer",id: "#{exam_word[:word].word}_A"%>
              </div>
              <div class="col-md-4 btn .offset-md-2 btn-primary">
                <%= link_to  "B. #{exam_word[:answer][1]}", check_answer_course_path(answer: exam_word[:answer][1],word_id: exam_word[:word].id,answer_at:"#{exam_word[:word].word}_B") ,
                remote: true,id: "#{exam_word[:word].word}_B", class: "btn answer"%>
              </div>
              <div class="col-md-4 offset-md-2 btn btn-primary">
                <%= link_to  "C. #{exam_word[:answer][2]}", check_answer_course_path(answer: exam_word[:answer][2],word_id: exam_word[:word].id,answer_at:"#{exam_word[:word].word}_C"),
                remote: true,id: "#{exam_word[:word].word}_C", class: "btn answer"%>
              </div>
              <div class="col-md-4 .offset-md-2 btn btn-primary">
                <%= link_to  "D. #{exam_word[:answer][3]}", check_answer_course_path(answer: exam_word[:answer][3],word_id: exam_word[:word].id,answer_at:"#{exam_word[:word].word}_D"),
                remote: true,id: "#{exam_word[:word].word}_D", class: "btn answer"%>
              </div>
            </div>
          </div>
        <% end %>
        <div class="carousel-item" >
          <h2>Tong so cau:<%=@exam_words.length%></h2>
          <h2>So cau dung:<span class="true_answer"></span>/<%=@exam_words.length%></h2>
          <h2>So cau sai:<span class="false_answer"></span>/<%=@exam_words.length%></h2>
        </div>
      </div>
      <!--/.Slides-->
      <!--Controls-->
      <!--/.Controls-->
    </div>
  </div>
</div>
<!--/.Carousel Wrapper-->
<script>
  $('.carousel').carousel({
    interval: 20000
  })
  $('.carousel').carousel('pause')
  $('#carousel-example-2').on('slid.bs.carousel', function () {
    $('.answer').parent().removeClass("btn-danger").addClass( "btn-primary" );
    $('.answer').parent().removeClass("btn-success").addClass( "btn-primary" );
  
  })
</script>
<%= javascript_pack_tag 'textToSpeech'%>
